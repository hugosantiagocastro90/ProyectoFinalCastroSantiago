<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalCastroSantiago.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Orange" Padding="24" CornerRadius="0">
                <Label Text="Login" HorizontalTextAlignment="Center" TextColor="Brown" FontSize="36"/>
            </Frame>
            <Image Source="https://i.pinimg.com/736x/cc/f4/0e/ccf40e14b1986c3eeab4ccaa01ce3140.jpg" WidthRequest="100" HeightRequest="100" Margin="0,50,0,30"/>
            <Entry x:Name="txtusuario" Placeholder="Usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"></Entry>

            <Button x:Name="btnIniciar" Text="Iniciar" Background="Orange" BorderRadius="20" TextColor="Red" Clicked="btnOpen_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registro" Background="Red" BorderRadius="20" TextColor="White" Clicked="btnRegistro_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>